---
import type { ImageMetadata } from 'astro';
import { getImage } from 'astro:assets';

interface Props {
    imgUrl?: string | ImageMetadata;
    mobileImgUrl?: string | ImageMetadata;
    desktopImgUrl?: string | ImageMetadata;
    alt: string;
    class?: string;
}

const defaultMobileImgUrl = '/src/images/default-mobile.jpg';
const defaultDesktopImgUrl = '/src/images/default-desktop.jpg';

const { imgUrl, mobileImgUrl, desktopImgUrl, alt, class: className } = Astro.props;

const effectiveMobileImgUrl = mobileImgUrl || imgUrl || defaultMobileImgUrl;
const effectiveDesktopImgUrl = desktopImgUrl || imgUrl || defaultDesktopImgUrl;

const mobileImg = await getImage({
    src: effectiveMobileImgUrl,
    format: 'webp',
    width: 200,
    height: 200,
});

const desktopImg = await getImage({
    src: effectiveDesktopImgUrl,
    format: 'webp',
    width: 800,
    height: 200,
});
---

<picture>
    <source media="(max-width: 799px)" srcset={mobileImg.src} />
    <source media="(min-width: 800px)" srcset={desktopImg.src} />
    <img src={desktopImg.src} alt={alt} class={className} />
</picture>
