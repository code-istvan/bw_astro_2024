---
import './_accordion.scss';

const { schedule = [], id } = Astro.props;
---

{
    schedule.map((day, index) => (
        <div class="accordion__section">
            <button class="accordion" data-accordion-toggle={`${id}-${index}`}>
                <div class="accordion-chevron">
                    <div class="accordion__title-container">
                        <p>{day.date}</p>
                    </div>
                    <div class="accordion__svg-container">
                        <svg
                            class="accordion__icon"
                            data-accordion-icon={`${id}-${index}`}
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="hsl(0, 0%, 100%)"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path d="M10.5 10V2H13.5V10H22V13H13.5V22H10.5V13H2V10H10.5Z" fill="orange" />
                        </svg>
                    </div>
                </div>
            </button>
            <div data-accordion-content={`${id}-${index}`} class="accordion__content">
                <ul class="accordion__text">
                    {day.program.map((entry) => (
                        <li>
                            <span class="mr-0_5rem clr-shades-gray body body--bold body--font-family-secondary">
                                <em>{entry.time}</em>
                            </span>
                            <span class="body body--bold body--font-family-secondary">{entry.activity}</span>
                        </li>
                    ))}
                </ul>
            </div>
        </div>
    ))
}

<script>
    import { initAccordion } from '../js/accordionLogic.js';
    initAccordion();
</script>
