---
import { Image } from 'astro:assets';
import Osztondij from '../../images/osztondij_background.jpg';
import { useTranslations, getLangFromUrl } from '../../i18n/utils';
import './_sectionScholarship.scss';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="section-scholarship mt-40px">
    <div class="section-scholarship__background">
        <Image src={Osztondij} alt="Bandha Works JÃ³gaiskola Scholarship" />
    </div>
    <div class="container section-scholarship__wrapper mt-40px text-center">
        <h2 class="mb-20px section-scholarship__header heading heading--1">
            {t('sectionScholarshipTitle')}
        </h2>
        <div class="mt-20px section-scholarship__text">
