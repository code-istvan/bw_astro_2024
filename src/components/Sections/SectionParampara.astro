---
import { Image } from 'astro:assets';
import sharathJi from '../../images/sharath_ji_bw.jpg';
import { useTranslations, getLangFromUrl } from '../../i18n/index.ts';
import './_sectionParampara.scss';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="section-parampara bg-shades-darkGray mt-40px">
    <div class="container section-parampara__wrapper">
        <div class="row">
            <div class="col-12-xs col-4-md section-parampara__image full-width-mobile">
                <Image src={sharathJi} alt="Paramaguru Sharath Jois" />
            </div>
            <div class="col-12-xs col-8-md section-parampara__text">
                <h2 class="mb-20px heading heading--1 text-align-left">Bandha Works Parampara</h2>
                <p>
                    {t('sectionParamparaText')}
                </p>
                <a
                    href={t('sectionParamparaLink')}
                    class="btn btn--width-full-mobile btn--primary--outline mt-20px"
                    aria-label="{t('sectionParamparaButton')}"
                >
                    {t('sectionParamparaButton')}
                </a>
            </div>
        </div>
    </div>
</section>
