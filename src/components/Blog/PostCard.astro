---
const { frontmatter, slug, minutesRead } = Astro.props;
const { title, date, description, author, tags } = frontmatter;
---

<div>
    <a href={`/blog/${slug}`}>
        <h3>{title}</h3>
    </a>
    <p>{date}</p>
    <p>
        {
            tags.map((tag) => (
                <a href={`/blog/tags/${tag}`} class="tag-link">
                    {tag}
                </a>
            ))
        }
    </p>
    <p>{description}</p>
    <p>{author}</p>
    <p>{minutesRead} perc olvas√°s</p>
</div>
