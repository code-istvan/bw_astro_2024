---
const { frontmatter, slug, minutesRead } = Astro.props;
const { title, date, description, author } = frontmatter;
---

<div>
    <a href={`/blog/${slug}`}>
        <p>{title}</p>
        <p>{date}</p>
        <p>{description}</p>
        <p>{author}</p>
        <p>{minutesRead} perc olvasás</p>
        <!-- Helyesen megjelenített olvasási idő -->
    </a>
</div>
