---
import type { ImageMetadata } from 'astro';
import { getImage } from 'astro:assets';
import '@fontsource/abril-fatface'; 
import '@fontsource/abril-fatface/400.css';

interface Props {
    mobileImgUrl: string | ImageMetadata;
    desktopImgUrl: string | ImageMetadata;
    alt: string;
    pageName?: string;
    indexHu?: boolean;
    indexEn?: boolean;
    containerClass?: string;
}

const {
    mobileImgUrl,
    desktopImgUrl,
    alt,
    pageName,
    indexHu = false,
    indexEn = false,
    containerClass = '',
} = Astro.props;

const mobileImg = await getImage({
    src: mobileImgUrl,
    format: 'webp',
    width: 1080,
    height: 1080,
});

const desktopImg = await getImage({
    src: desktopImgUrl,
    format: 'webp',
    width: 1800,
    height: 550,
});
---
<div class="hero-container">
    <div class="hero-image" style="--mobile-height: 1080px; --desktop-height: 550px;">
        <picture>
            <source media="(max-width: 799px)" srcset={mobileImg.src} />
            <source media="(min-width: 800px)" srcset={desktopImg.src} />
            <img src={desktopImg.src} alt={alt} />
        </picture>
    </div>
    <div class={` ${containerClass}`}>
        {
               
            indexHu ? (
               <div class="container hero-container-text--wrapper">
                <div class="index-text-hu">
                    <h1 class="special-h1">Az egyetlen kiút <br />befelé vezet</h1>
                    <br />
                    <p class="special-p">Tradicionális astanga jógaiskola <br />a Paramaguru áldásával</p>
                    <a href="/astanga-mysore-program" class="btn btn--primary--outline mt-20px">Astanga Mysore-program</a>
                </div>
            </div>
        

            ) : indexEn ? (
                <div class="index-text-en">
                    <h1 class="special-h1">The only way OUT is IN</h1>
                    <br />
                    <p class="special-p">Traditional astanga yoga shala with the blessing of Paramaguru</p>
                </div>
            ) : (
                <div class="container page-name">
                    <h1>{pageName}</h1>
                </div>
            )
        }
    </div>

</div>


<style>
.hero-container-text--wrapper {
      position: absolute;
        top: 80px;

}

.hero-container {
    position: relative;
    padding: 0;

}


.special-h1 {
  font-family: $font-family-primary;
  font-size: 3.4rem; // Change this to the desired font size
  font-weight: 400; // Change this to the desired font weight

  @include xs {
    font-size: 3rem;
  }
  @include md {
    font-size: 4rem;
  }
  @include xl {
    font-size: 5rem;
  }
}
.special-p {
    font-size: 1.8rem;
}

    .hero-image {
        position: relative;
        background: radial-gradient(circle, rgba(255, 165, 0, 1) 0%, rgba(255, 165, 0, 0) 100%);
;
    }
    @media (max-width: 799px) {
        .hero-image {
            height: 100vw; /* Ensures the image container is square */
        }
    }
    @media (min-width: 800px) {
        .hero-image {
            height: var(--desktop-height);
        }
    }
    picture,
    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .page-name {
        position: absolute;
        bottom: 20px;
    }
    

    @media (max-width: 769px) {  
            
            .index-text-hu a,
            .index-text-en a {
            /* display: inline-block;
            width: 100%; */
            }

      
    }
</style>
