---
import type { ImageMetadata } from 'astro';
import { getImage } from 'astro:assets';
import '@fontsource/abril-fatface'; 
import '@fontsource/abril-fatface/400.css';

interface Props {
    mobileImgUrl: string | ImageMetadata;
    desktopImgUrl: string | ImageMetadata;
    alt: string;
    pageName?: string;
    indexHu?: boolean;
    indexEn?: boolean;
    containerClass?: string;
}

const {
    mobileImgUrl,
    desktopImgUrl,
    alt,
    pageName,
    indexHu = false,
    indexEn = false,
    containerClass = '',
} = Astro.props;

const mobileImg = await getImage({
    src: mobileImgUrl,
    format: 'webp',
    width: 1080,
    height: 1080,
});

const desktopImg = await getImage({
    src: desktopImgUrl,
    format: 'webp',
    width: 1800,
    // height: 550,
});
---

<div class={`container hero-container ${containerClass}`}>
    <h1 class="page-name">{pageName}</h1>
    <div class="hero-image-wrapper">
        <div class="hero-image">
          <picture class="display-flex">
            <source media="(max-width: 799px)" srcset={mobileImg.src} />
            <source media="(min-width: 800px)" srcset={desktopImg.src} />
            <img src={desktopImg.src} alt={alt} />
          </picture>
        </div>
      </div>
        {
               
            indexHu ? (
               <div class="hero-container-text--wrapper">
                <div class="container">

              
                <div class="index-text-hu">
                    <h1 class="special-h1">Az egyetlen kiút <br />befelé vezet</h1>
                    <br />
                    <p class="special-p">Tradicionális astanga jógaiskola <br />a Paramaguru áldásával</p>
                    <a href="/astanga-mysore-program" class="btn btn--full-width-mobile btn--primary--outline mt-20px">Astanga Mysore-program</a>
                </div>
              </div>
            </div>
        
       
            ) : indexEn ? (
                <div class="index-text-en">
                    <h1 class="special-h1">The only way OUT is IN</h1>
                    <br />
                    <p class="special-p">Traditional astanga yoga shala with the blessing of Paramaguru</p>
                </div>
            ) : null
        }


</div>


<style>
.hero-container-text--wrapper {
      position: absolute;
        top: 80px;
        left: 0;
        right: 0;
}

.hero-container {
    position: relative;
}

.special-h1 {
  font-family: $font-family-primary;
  font-size: 2rem; // Change this to the desired font size
  font-weight: 400; // Change this to the desired font weight

  @include xs {
    font-size: 2.2rem;
  }
  @include md {
    font-size: 4rem;
  }
  @include xl {
    font-size: 5rem;
  }
}
.special-p {
    font-size: 1.2rem;
}

.hero-image-wrapper {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    overflow: hidden;
  }

  .hero-image {
    position: relative;
    width: 100%;
  }

  .hero-image {
        position: relative;
        background: radial-gradient(circle, rgba(255, 165, 0, 1) 0%, rgba(255, 165, 0, 0) 100%);
        /* background: linear-gradient(to bottom, rgba(255, 165, 0, 1) 0%, rgba(255, 165, 0, 0) 90%) */
;
    }
    @media (max-width: 799px) {
        .hero-image {
            height: 100vw;
        }
    }
    @media (min-width: 800px) {
        .hero-image {
            height: auto;
            aspect-ratio: 1800 / 550; 
        }}




 @media (max-width: 799px) {
    .hero-image {
      height: 100vw;
    }
  }

  @media (min-width: 800px) {
    .hero-image {
      height: auto;
      max-height: 100vh;
    }
  }

  picture,
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
    .page-name {
        position: absolute;
        bottom: 20px;
        z-index: 1;
    }
</style>
