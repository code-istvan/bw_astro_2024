interface Props {
    mobileImgUrl: string | ImageMetadata;
    desktopImgUrl: string | ImageMetadata;
    alt: string;
    pageName?: string;
    indexHu?: boolean;
    indexEn?: boolean;
}

const { mobileImgUrl, desktopImgUrl, alt, pageName, indexHu = false, indexEn = false } = Astro.props;

