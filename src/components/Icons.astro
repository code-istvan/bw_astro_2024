    let fillColor: string;
    switch (propColor) {
        case 'green':
            fillColor = '#00FF7F';
            break;
        case 'white':
            fillColor = '#FFFFFF';
            break;
        case 'darkGrey':
            fillColor = 'hsl(0, 0%, 20%)';
            break;
        case 'lightGray':
