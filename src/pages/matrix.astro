---
import BaseLayout from '../layouts/BaseLayout.astro';
import Typewriter from '../components/Typewriter/Typewriter.astro';
import desktopImage from '../images/rolunk_desktop.jpeg';
import HeroImage from '../components/HeroImage/HeroImage.astro';
import mobileImage from '../images/rolunk_mobil.jpeg';

const metadata = {
    title: 'Matrix',
    description:
        'A Bandha Works Jógaiskolát 2013-ban három mérnök alapította, akiket összekötött azon törekvés, hogy a tradicionális astanga vinyásza jógát népszerűsítsék, oktassák Magyarországon.',
};
---

<BaseLayout title={metadata.title} description={metadata.description} image={desktopImage}>
    <HeroImage
        mobileImgUrl={mobileImage}
        desktopImgUrl={desktopImage}
        alt={metadata.title}
        pageName={metadata.title}
        containerClass="container--tight-desktop"
    />
    <div class="container container--tight-desktop">
        <div class="mt-20px">
            <Typewriter textArray={['Nem könnyű írni erről…  ||||']} align="left" loopAll={true} />
            <Typewriter
                textArray={['|Felkavaró… kimerítő… nehezen értelmezhető… nehezen emészthető…|||']}
                align="left"
                loopAll={true}
            />
            <Typewriter
                textArray={['|Két napig csak feküdtem az ágyban úgy kimerített fizikálisan…|||']}
                align="left"
                loopAll={true}
            />
            <Typewriter textArray={['|Pedig csak egy óra volt... nem is értem…|||']} align="left" loopAll={true} />
            <Typewriter
                textArray={['|Nem nagyon értem… egyenlőre nem értem miért történik mindez velem… |||']}
                align="left"
                loopAll={true}
            />
            <Typewriter
                textArray={['|Az első pár körben az ereszkedésről szólt a dolog a ráhangolódásról…|||']}
                align="left"
                loopAll={true}
            />
            <Typewriter textArray={['|Közeledtem valami fényességhez…|||']} align="left" loopAll={true} />
            <Typewriter
                textArray={['|De nem igazán tudtam minek is kell történnie, nem éreztem semmit|||']}
                align="left"
                loopAll={true}
            />
            <Typewriter
                textArray={['|Olyan voltam mint egy üres konzerves doboz, amiben nincs semmi kiürült, kiszáradt|||']}
                align="left"
                loopAll={true}
            />
            <Typewriter textArray={['|Nem adatható vissza, nem leírható|||']} align="left" loopAll={true} />
            <Typewriter
                textArray={[
                    '|Aztán a harmadik harmadban erős szexuális energia szabadult fel nyilván a csípő nyitástól|||',
                ]}
                align="left"
                loopAll={true}
            />
            <Typewriter textArray={['|Erős agresszivitást elfojtást éltem meg|||']} align="left" loopAll={true} />
        </div>
    </div>
    <style>
        body {
            background-color: #333;
        }
    </style>
</BaseLayout>
