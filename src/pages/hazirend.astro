---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroImage from '../components/HeroImage/HeroImage.astro';
import mobileImage from '../images/hazirend_mobil.jpg';
import desktopImage from '../images/hazirend_desktop.jpg';
import rulesData from '../data/houseRules.json';

const pageTitle = 'Házirend';
const language = 'hu'; // vagy 'en'
const rules = rulesData.rules.map((rule) => rule[language]);
---

<BaseLayout title={pageTitle} image={desktopImage}>
    <HeroImage
        mobileImgUrl={mobileImage}
        desktopImgUrl={desktopImage}
        alt={pageTitle}
        pageName={pageTitle}
        containerClass="container--tight-desktop"
    />
    <div class="container container--tight-desktop">
        <div class="hazirend tight--desktop--container">
            <div class="hazirend__intro row mt-20px mb-20px">
                <div class="hazirend__text col">
                    <h3>
                        A zavartalan gyakorlás és befelé figyelés érdekében kérünk, hogy olvasd el, és tartsd be a
                        házirendben foglaltakat. Köszönjük!
                    </h3>
                </div>
            </div>
            <div class="hazirend__rules row">
                <div class="col">
                    <ol type="1" class="body">
                        {rules.map((rule) => <li>{rule}</li>)}
                    </ol>
                </div>
            </div>
            <div class="hazirend__footer row mt-20px mb-40px">
                <div class="col">
                    <p>Várunk szeretettel!</p>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

