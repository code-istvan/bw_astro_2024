                        textArray={['|Felkavaró, kimerítő, nehezen értelmezhető, || nehezen emészthető|||']}
                        align="left"
                        loopAll={true}
                        cursorColor="orange"
                    />
                    <Typewriter
                        textArray={[
                            '|Két napig csak feküdtem az ágyban úgy kimerített fizikálisan és mentálisan, pedig csak egy óra volt|||',
                        ]}
                        align="left"
                        loopAll={true}
                        cursorColor="orange"
                    />
