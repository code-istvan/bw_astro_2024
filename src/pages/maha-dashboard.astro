  <script>
    import { actions } from 'astro:actions';
    import { navigate } from 'astro:transitions/client';

    function initMahaDashboard() {
      const backupBtn = document.getElementById('backup-btn') as HTMLButtonElement;
      const logoutBtn = document.getElementById('logout-btn') as HTMLButtonElement;

      // EllenÅ‘rizzÃ¼k hogy mÃ¡r inicializÃ¡ltuk-e
      if (backupBtn?.dataset.initialized === 'true') return;
      if (logoutBtn?.dataset.initialized === 'true') return;

      // Backup gomb
      if (backupBtn) {
        backupBtn.dataset.initialized = 'true';

        backupBtn.addEventListener('click', async () => {
          try {
            backupBtn.textContent = 'â³ MentÃ©s folyamatban...';
            backupBtn.disabled = true;

            const response = await fetch('/api/backup');

            if (response.ok) {
              const blob = await response.blob();
              const url = window.URL.createObjectURL(blob);
              const a = document.createElement('a');
              a.href = url;

              const contentDisposition = response.headers.get('Content-Disposition');
              const filenameMatch = contentDisposition?.match(/filename="(.+)"/);
              const filename = filenameMatch?.[1] || `bandhaworks_backup_${new Date().toISOString().slice(0, 10)}.sql`;

              a.download = filename;
              document.body.appendChild(a);
              a.click();
              document.body.removeChild(a);
              window.URL.revokeObjectURL(url);

              backupBtn.textContent = 'âœ… MentÃ©s sikeres!';
              setTimeout(() => {
                backupBtn.textContent = 'ðŸ“¦ AdatbÃ¡zis mentÃ©s letÃ¶ltÃ©se';
                backupBtn.disabled = false;
              }, 2000);
            } else {
              throw new Error('Backup failed');
            }
          } catch (error) {
            console.error('Backup error:', error);
            backupBtn.textContent = 'âŒ Hiba tÃ¶rtÃ©nt!';
            setTimeout(() => {
              backupBtn.textContent = 'ðŸ“¦ AdatbÃ¡zis mentÃ©s letÃ¶ltÃ©se';
              backupBtn.disabled = false;
            }, 2000);
          }
        });
      }

      // Logout gomb
      if (logoutBtn) {
        logoutBtn.dataset.initialized = 'true';

        logoutBtn.addEventListener('click', async () => {
          try {
            logoutBtn.textContent = 'â³ MentÃ©s Ã©s kilÃ©pÃ©s...';
            logoutBtn.disabled = true;

            await fetch('/api/backup').then(async (response) => {
              if (response.ok) {
                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;

                const contentDisposition = response.headers.get('Content-Disposition');
                const filenameMatch = contentDisposition?.match(/filename="(.+)"/);
                const filename =
                  filenameMatch?.[1] || `bandhaworks_backup_${new Date().toISOString().slice(0, 10)}.sql`;

                a.download = filename;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                window.URL.revokeObjectURL(url);
              }
            });

            await new Promise((resolve) => setTimeout(resolve, 500));

            const { error } = await actions.logout(new FormData());
            if (!error) {
              navigate('/');
            }
          } catch (error) {
            console.error('Logout error:', error);
            logoutBtn.textContent = 'ðŸšª KilÃ©pÃ©s';
            logoutBtn.disabled = false;
          }
        });
      }
    }

    // Csak egyszer inicializÃ¡lunk
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMahaDashboard);
    } else {
      initMahaDashboard();
    }

    document.addEventListener('astro:page-load', initMahaDashboard);
  </script>

  <style>
    .admin-actions {
      display: flex;
