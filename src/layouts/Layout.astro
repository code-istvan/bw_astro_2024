---
import AstroNavbar from "../components/Navigation/AstroNavbar";
import "../sass/global.scss";
import "../sass/layouts/_layout.scss";

interface Props {
    title: string;
    isHomePage?: boolean;
}

const url = Astro.url;
const { title, isHomePage } = Astro.props as Props;
---

<!doctype html>
<html lang="hu">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <!-- <meta http-equiv="refresh" content="0; url=/hu" /> -->
        <!-- {
            isHomePage && (
                <script type="text/javascript">
                    window.location.href = '/hu/';
                </script>
            )
        } -->
    </head>
    <body>
        <AstroNavbar client:only="react" url={url} />
        <div class="layout-content-wrapper"><slot /></div>
    </body>
</html>
