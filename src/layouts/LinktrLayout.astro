---
import faviconSrc from '../images/favicon.png';
import faviconSvgSrc from '../images/favicon.svg';
import { AstroFont } from 'astro-font';
import Seo from '../components/Seo.astro';
import '../sass/global.scss';
import './_linktrLayout.scss';

interface Props {
    title: string;
    description?: string;
    image?: string | ImageMetadata;
    noindex?: boolean;
    language?: 'Hungarian' | 'English';
}

const { title, description, noindex, language } = Astro.props as Props;
---

<!doctype html>
<html lang={language === 'Hungarian' ? 'hu' : 'en'}>
    <head>
        <Seo {...Astro.props} />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />

        <link rel="icon" type="image/svg+xml" href={faviconSvgSrc.src} />
        <link rel="apple-touch-icon" href={faviconSrc.src} />
        <link rel="manifest" href="/manifest.json" />

        <AstroFont
            config={[
                {
                    src: [],
                    name: 'Abril Fatface',
                    googleFontsURL: 'https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap',
                    preload: true,
                    display: 'swap',
                    selector: 'body',
                    fallback: 'serif',
                },
            ]}
        />

        {noindex && <meta name="robots" content="noindex, nofollow" />}
    </head>
    <body class="bg-shades-darkGray">
        <slot />
    </body>
</html>
